@page
@model Tracking_Events.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ReviewID" />
            <input type="hidden" asp-for="Review.UserName" />
            <div class="form-group">
                <label asp-for="Review.Venue.VenueName" class="control-label"></label>
                <input asp-for="Review.Venue.VenueName" value="@Model.Review.Venue.VenueName" class="form-control" disabled />
                <span asp-validation-for="Review.Venue.VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Rating" class="control-label"></label>
                <input asp-for="Review.Rating" class="form-control" />
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Description" class="control-label"></label>
                <textarea asp-for="Review.Description" class="form-control"></textarea>
                <span asp-validation-for="Review.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
